<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
 xmlns:local="clr-namespace:爸爸的爱"
 x:Class="爸爸的爱.App">
 <Application.Resources>
 <ResourceDictionary>
 <ResourceDictionary.MergedDictionaries>
 <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
 <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
 </ResourceDictionary.MergedDictionaries>

 <!-- 动态主题颜色键（默认：普通模式） -->
 <Color x:Key="AppColorPageBackground">#FFFFFF</Color>
 <Color x:Key="AppColorTextPrimary">#2C3E50</Color>
 <Color x:Key="AppColorTextSecondary">#4A6FA5</Color>
 <Color x:Key="AppColorButtonBackground">#1976D2</Color>
 <Color x:Key="AppColorButtonText">#FFFFFF</Color>
 <Color x:Key="AppColorFrameBackground">#F5F7FB</Color>
 <Color x:Key="AppColorBorder">#B3CDE0</Color>
 <Color x:Key="AppColorKeyBackground">#B0B0B0</Color>
 <Color x:Key="AppColorKeyText">#000000</Color>
 </ResourceDictionary>
 </Application.Resources>
</Application>
